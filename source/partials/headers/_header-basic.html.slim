- page ||= nil
- share ||= nil
- classes ||= ""
- subs ||= nil
- hide_caption ||= nil
- single_col_mobile ||= nil

- if page.present?
  - col_style = single_col_mobile ? "col-12" : "col-6"

  header class=(classes)
    .container.pb-5.text-center.text-sm-left
      .row
        .col-12
          = partial "partials/breadcrumb", locals: {page: page}

        .offset-lg-1.col-lg-6.col-md-8.mb-0.mb-md-4
          = partial "partials/headers/main-titles", locals: {page: page}

          - yield
          - if content_for?(:col_one) || content_for?(:col_two)
            .row.mb-5
              - if content_for?(:col_one)
                .pb-sm-0 class="#{col_style}"
                  = yield_content :col_one

              - if content_for?(:col_two)
                div class="#{col_style}"
                  = yield_content :col_two

          = partial "partials/headers/subpages-menu", locals: {subs: subs, hide_caption: hide_caption}

        - if content_for?(:aside)
          .offset-lg-1.col-md-4
            - if share.present?
              = partial "partials/share"
            - if content_for?(:aside)
              = yield_content :aside

