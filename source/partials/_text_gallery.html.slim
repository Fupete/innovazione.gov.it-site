ruby:
  slides ||= nil
  hide_tags ||= nil
  hide_type ||= nil
  hide_date ||= nil

- if slides.present?
  h3.sr-only = t("highlights")
  .swiper.swiper--text
    .swiper-container.fixed-height.fixed-width.mb-4.shadow-lg
      .swiper-wrapper.h-100
        - slides.each do |slide|

          ruby:
            has_tags = slide.respond_to?(:tags) && slide.tags.present?

            is_video = if slide.item_type.api_key == "video" &&
              slide.respond_to?(:video)
              true
            end

            hide_tags = is_video && hide_video_tags
            title_style = is_video ? "mid-caption--xmlarge" : "h4"
            icon_position = hide_tags ? "video_slide_icon" : "with_tags"

            placeholder = if slide.respond_to?(:placeholder_image) &&
              (slide.placeholder_image.present? && slide.use_placeholder_image)
              true
            end

            has_date = if slide.respond_to?(:date_shown) &&
              slide.date_shown.present?
              true
            end

          .swiper-slide.fixed-width
            .swiper-slide__text.bg-white
              .h-100.d-flex.flex-column.justify-content-around
                .px-3.px-md-5
                  - if !hide_type
                    span.pr-2.text-uppercase.font-weight-semibold
                      = t("models.#{slide.item_type.api_key}")
                  - if !hide_date && has_date
                    span.px-2.text-secondary
                      = partial "partials/formatted-date",
                        locals: {date: slide.date_shown}
                  - if slide.title
                    h4.pt-1.text-primary.font-weight-bold class=title_style
                      = proxy_link_to slide.title,
                        page_path(slide),
                        class: "text-decoration-none"
                  - if !is_video
                    .mid-caption--xlarge
                      = slide.subtitle
                - if is_video
                  figure.mb-0
                    - if !placeholder
                      - id = slide.video.provider_uid
                      - thumbnail_url = "https://i.ytimg.com/vi/#{id}/maxresdefault.jpg"
                      = image_tag thumbnail_url,
                        style: "width:100%; object-fit:cover",
                        class: "lazyload d-block video_thumbnail_height"
                    - else
                      = proxy_image_tag slide.placeholder_image.lqip_data_url(w:10,
                        h: 6,
                        fit: "crop"),
                        data: {sizes: "100vw",
                          src: slide.placeholder_image.url(w: 700,
                             h: 400,
                             fit: "crop",
                             auto: "compress"),
                          srcset: "#{slide.placeholder_image.url(w: 450,
                              h: 330,
                              fit: 'crop',
                              auto: 'compress')} 480w,
                            #{slide.placeholder_image.url(w: 600,
                              h: 333,
                              fit: 'crop',
                              auto: 'compress')} 632w,
                              #{slide.placeholder_image.url(w: 560,
                                h: 333,
                                fit: 'crop',
                                auto: 'compress')} 844w,
                              #{slide.placeholder_image.url(w: 700,
                                h: 400,
                                fit: 'crop',
                                auto: 'compress')} 1091w,
                              #{slide.placeholder_image.url(w: 360,
                                h: 226,
                                fit: 'crop',
                                auto: 'compress')} 1320w,
                              #{slide.placeholder_image.url(w: 590,
                                h: 385,
                                fit: 'crop',
                                auto: 'compress')} 1440w"},
                        style: "width:100%; object-fit:cover",
                        class: "lazyload d-block video_thumbnail_height",
                        alt: slide.placeholder_image.alt,
                        title: slide.placeholder_image.title

                    svg class=["icon",
                      "bg-white",
                      "icon-primary",
                      "rounded",
                      "p-1",
                      icon_position].join(" ")
                      use xlink:href="/images/sprite.svg#it-video"

                - if !hide_tags && has_tags
                  .px-3.px-md-5
                    .d-flex.flex-wrap-reverse.flex-row-reverse.align-items-end
                      - slide.tags.each do |tag|
                        = partial "partials/chip",
                          locals: {label: tag.name,
                          url: page_path(tag),
                          chip_type: "",
                          btn_type: "",
                          chip_size: ""}
    .swiper-pagination.mt-4
