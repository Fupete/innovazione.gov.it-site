- slides ||= nil

- if slides.present?
  .swiper.swiper--text
    .swiper-container
      .swiper-wrapper
        - slides.each do |slide|
          .swiper-slide
            .swiper-slide__text
              div
                .text-uppercase.font-weight-semibold.text-muted
                  = t("models.#{slide.item_type.api_key}")
                - if slide.title
                  .h3.py-3.text-primary.font-weight-bold
                    = slide.title
                  .card-text
                    = slide.subtitle
              .my-5
              .d-flex.flex-wrap-reverse.flex-row-reverse.align-items-end
                - if slide.tags.present?
                  - slide.tags.each do |tag|
                    = partial "partials/chip",
                      locals: {label: tag.name,
                      url: page_path(tag),
                      chip_type: "",
                      btn_type: "",
                      chip_size: ""}
    .swiper-pagination

