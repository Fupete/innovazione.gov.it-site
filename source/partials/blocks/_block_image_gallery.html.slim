.swiper.mb-5
  .swiper-container
    .swiper-wrapper
      - block.images.each do |image|
        .swiper-slide
          = proxy_image_tag image.lqip_data_url(w: 10, h: 6, fit:'max'),
              data: {'sizes': '100vw',
                'src': image.url(w: 700, h: 400, fit:'max', auto:'compress'),
                'srcset': "#{image.url(w: 450, h: 330, fit:'max', auto:'compress')} 480w,
                #{image.url(w: 600, h: 333, fit:'max', auto:'compress')} 632w,
                #{image.url(w: 560, h: 333, fit:'max', auto:'compress')} 844w,
                #{image.url(w: 700, h: 400, fit:'max', auto:'compress')} 1091w,
                #{image.url(w: 800, h: 500, fit:'max', auto:'compress')} 1320w"},
              class: "lazyload d-block w-100 m-0",
              alt: image.alt,
              title: image.title

  .swiper-pagination
