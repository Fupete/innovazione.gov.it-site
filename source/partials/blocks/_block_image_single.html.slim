- if block.image.present?
  .container
    .row.my-3
      div class=(block.big.present? ? "col-12" : "col-lg-9")
        figure.m-0
          = image_tag block.image.lqip_data_url(w: 10, h: 6, fit:'max'),
              data: {'sizes': '100vw',
                'src': block.image.url(w: 700, h: 400, fit:'max', auto:'compress'),
                'srcset': "#{block.image.url(w: 450, h: 330, fit:'max', auto:'compress')} 480w,
                #{block.image.url(w: 600, h: 333, fit:'max', auto:'compress')} 632w,
                #{block.image.url(w: 560, h: 333, fit:'max', auto:'compress')} 844w,
                #{block.image.url(w: 700, h: 400, fit:'max', auto:'compress')} 1091w,
                #{block.image.url(w: 800, h: 500, fit:'max', auto:'compress')} 1320w"},
              class: "lazyload d-block w-100 m-0",
              alt: block.image.alt,
              title: block.image.title
