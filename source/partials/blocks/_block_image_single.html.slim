- if block.image.present?
  - img = block.image
  .container.mb-5
    .row.my-3
      .px-0.px-md-3 class=(block.big.present? ? "col-12" : "col-lg-9")
        figure.m-0
          = proxy_image_tag img.lqip_data_url(w: 10, h: 6, fit: "max"),
              data: {"sizes": "100vw",
                "src": img.url(w: 700, h: 400, fit: "max", auto: "compress"),
                "srcset": "#{img.url(w: 450, h: 330, fit: 'max', auto: 'compress')} 480w,
                #{img.url(w: 600, h: 333, fit: 'max', auto: 'compress')} 632w,
                #{img.url(w: 560, h: 333, fit: 'max', auto: 'compress')} 844w,
                #{img.url(w: 700, h: 400, fit: 'max', auto: 'compress')} 1091w,
                #{img.url(w: 800, h: 500, fit: 'max', auto: 'compress')} 1320w"},
              class: "lazyload d-block w-100 m-0",
              alt: img.alt,
              title: img.title
