ruby:
  group_classes = "d-flex align-items-center"
  element_classes = "d-block mr-3"

div class=group_classes
  - if dato.company.twitter_url.present?
    = link_to dato.company.twitter_url,
      class: element_classes,
      target: "_blank",
      rel: "noopener",
      aria: {label: t("socials.twitter")}
      svg.icon.icon-sm.icon-white [
        focusable="false"
        role="img"
        aria-label="#{t("go_to")} #{t("socials.twitter")}"
      ]
        use xlink:href="/images/sprite.svg#it-twitter"

